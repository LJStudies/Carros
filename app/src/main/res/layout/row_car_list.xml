<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_margin"
    android:elevation="@dimen/cardview_elevation"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorBackLight"
    app:cardCornerRadius="@dimen/cardview_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_car"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_padding"
            android:layout_margin="@dimen/activity_margin"
            android:src="@drawable/audir8"/>

        <TextView
            android:id="@+id/text_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/image_car"
            android:layout_alignLeft="@+id/image_car"
            android:layout_marginTop="@dimen/activity_margin"

            android:text="@string/modelo"
            android:textSize="@dimen/text_small"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/image_car"
            android:layout_alignRight="@+id/image_car"
            android:layout_marginTop="@dimen/activity_margin"
            android:padding="@dimen/activity_padding"

            android:text="@string/ver_detalhes"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/colorPrimaryBlueLight"
            android:textAllCaps="true"
            android:textStyle="bold"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>